@model object

<!DOCTYPE html>
<html lang="en" style="height:100%">
<head>
</head>
<body style="height:100%">
    <section class="top" style="height:100%">
        <div style="display:flex">
            <div class="left_side" style="height:100%">
                <img name="drink_img" src=" " style="height: 500px;margin-left: 20%;width: 500px;" />
                <script>drink_img.src = localStorage.getItem('4');
                                                                        // localStorage.clear();</script>

                
                @switch (Model)
                {
                     case Dessert dessert:
                     <h2 style="margin-left:20%">@dessert.Name</h2>
                        break;

                    case BottledDrink bottledDrink:
                        <h2 style="margin-left:20%">@bottledDrink.Name</h2>
                        break;

                    case LunchAndBreakfast lunchAndBreakfast:
                        <h2 style="margin-left:20%">@lunchAndBreakfast.Name</h2>
                        <p style="margin-left:20%; font-size:larger">@lunchAndBreakfast.Descriptions</p>
                        break;

                    case FoodInPackage foodInPackage:
                        <h2 style="margin-left:20%">@foodInPackage.Name</h2>
                        <p style="margin-left:20%; font-size:larger">@foodInPackage.Descriptions</p>
                        break;

                    case Pastry pastry:
                            <h2 style="margin-left:20%">@pastry.Name</h2>
                            <p style="margin-left:20%; font-size:larger">@pastry.Descriptions</p>
                        break;
                    
                }
            </div>

        <div class="rigth_side">
            <h3 class=" calories_text">Информация о продукте:</h3>
            <div>

                @switch (Model)
                {
                    case Dessert dessert:

                        <div> Белки: @dessert.Proteins </div>
                        <div> Жиры: @dessert.Fats </div>
                        <div> Углеводы: @dessert.Carbohidrates </div>
                        <div> Калории: @dessert.Calories </div>

                        break;

                    case BottledDrink bottledDrink:
                        <div> Белки: @bottledDrink.Proteins </div>
                        <div> Жиры: @bottledDrink.Fats </div>
                        <div> Углеводы: @bottledDrink.Carbohidrates </div>
                        <div> Калории: @bottledDrink.Calories </div>
                        break;

                    case LunchAndBreakfast lunchAndBreakfast:
                        <div> Белки: @lunchAndBreakfast.Proteins </div>
                        <div> Жиры: @lunchAndBreakfast.Fats </div>
                        <div> Углеводы: @lunchAndBreakfast.Carbohidrates </div>
                        <div> Калории: @lunchAndBreakfast.Calories </div>
                        break;

                    case FoodInPackage foodInPackage:
                        <div> Белки: @foodInPackage.Proteins </div>
                        <div> Жиры: @foodInPackage.Fats </div>
                        <div> Углеводы: @foodInPackage.Carbohidrates </div>
                        <div> Калории: @foodInPackage.Calories </div>
                        break;

                    case Pastry pastry:
                        <div> Белки: @pastry.Proteins </div>
                        <div> Жиры: @pastry.Fats </div>
                        <div> Углеводы: @pastry.Carbohidrates </div>
                        <div> Калории: @pastry.Calories </div>
                        break;
                }

            </div>
        </div>
        </div>
    </section>
</body>
</html>