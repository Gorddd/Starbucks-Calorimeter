@{
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
<div class="head">
    <h1>Админ страничка</h1>

    <form action="/Home/Index">
        <input type="submit" action="/Home/Index" value="Вернуться на главную" class="somebuttons" style="margin-right: 3px;"/>
    </form>

    <form method="get" action="/Admin/ChangePassword">
        <input type="submit" action="/Admin/ChangePassword" value="Изменить пароль" class="somebuttons" style="margin-right: 3px;"/>
    </form>

    <form method="post" action="/Admin/SignOut">
        <input type="submit" action="/Admin/SignOut" value="Выйти" class="somebuttons"/>
    </form>
</div>

<div class="somecontainer">
    <nav class="leftmenu">
        <a asp-action="BottledDrinks">BottledDrinks</a><br />
        <a asp-action="Creams">Creams</a><br />
        <a asp-action="Desserts">Desserts</a><br />
        <a asp-action="Drinks">Drinks</a><br />
        <a asp-action="Espressoes">Espressoes</a><br />
        <a asp-action="FoodInPackages">FoodInPackages</a><br />
        <a asp-action="LunchAndBreakfasts">LunchAndBreakfasts</a><br />
        <a asp-action="Milks">Milks</a><br />
        <a asp-action="Pastries">Pasties</a><br />
        <a asp-action="Sizes">Sizes</a><br />
        <a asp-action="Syrops">Syrops</a><br />
        <a asp-action="Users">Users</a><br />
    </nav>
    <main>
        @RenderBody()
    </main>
</div>
</body>
</html>
